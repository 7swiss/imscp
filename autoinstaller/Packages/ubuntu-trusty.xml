            <package>apache2-suexec-pristine</package>
            <post_install_task>
                /usr/bin/update-alternatives --set suexec /usr/lib/apache2/suexec-pristine
            </post_install_task>
        </apache_php_fpm>
        <package>apache2</package>
        <package>apache2-bin</package>
        <package>apache2-data</package>
        <package>apache2-dev</package>
        <post_install_task>sh apache2_postinst.sh</post_install_task>
    </httpd>
    <php>
        <php5.6 description="PHP 5.6" class="Servers::php">
            <package>libapache2-mod-php5.6</package>
            <post_install_task>/usr/bin/update-alternatives --set php /usr/bin/php5.6</post_install_task>
            <post_install_task>/usr/bin/update-alternatives --set phar /usr/bin/phar5.6</post_install_task>
            <post_install_task>/usr/bin/update-alternatives --set phar.phar /usr/bin/phar.phar5.6</post_install_task>
