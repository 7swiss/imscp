# IMPORTANT:
# This script must be idempotent.

set -e

# Including the helper library
SELFDIR=$(dirname "$0")
. $SELFDIR/maintainer-helper.sh

case "$1" in
	install|upgrade)

		# Fix for #2224 Postgrey - Port changed to 10023 for some distributions
		# @author Laurent Declercq <laurent.declercq@i-mscp.net>
		# @since  1.0.7 (rc2)
		#
		# NOTE: If Lenny is no longer supported, this fix can be removed
		if $CMD_GREP -qe "--inet=.*60000" /etc/default/postgrey; then
			print_title "Postgrey configuration (Updating listening port):"

			# Updating the i-mscp.conf file here to revert back to the old port
			if test -f /etc/i-mscp/i-mscp.old.conf; then
				$CMD_SED -i s'/\(PORT_POSTGREY.*=.*\)10023/\160000/' \
					/etc/i-mscp/i-mscp.old.conf >> $LOGFILE 2>&1 || failed \
						"The script was unable to update the Postgrey listening port in your\n\t i-mscp.old.conf file!";
			fi

			$CMD_SED -i s'/\(PORT_POSTGREY.*=.*\)10023/\160000/' \
				/etc/i-mscp/i-mscp.conf >> $LOGFILE 2>&1 || failed \
					"The script was unable to update the Postgrey listening port in your\n\t i-mscp.conf file!";

			# Updating database.sql file only on install
			if [ "$1" = "install" ] ; then
				$CMD_SED -i s'/10023\(;tcp;POSTGREY\)/60000\1/' \
					/etc/i-mscp/database/database.sql >> $LOGFILE 2>&1 || failed \
                        "The script was unable to update the Postgrey listening port in the\n\t database schema!";
			fi

			print_status
		fi
	;;
	*)
		exit 0
	;;
esac

exit 0
