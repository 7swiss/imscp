use strict;
use warnings;
use File::Basename 'basename';
use iMSCP::Boolean;
use iMSCP::Bootstrapper;
use iMSCP::DbTasksProcessor;
use iMSCP::Debug 'debug';
use iMSCP::Getopt;
use iMSCP::LockFile;
use POSIX 'locale_h';

setlocale( LC_MESSAGES, 'C.UTF-8' );

$ENV{'LANG'} = 'C.UTF-8';

$> == 0 or die( "You do not have permission to call this script.\n" );

exit unless iMSCP::LockFile->new( path => "$::imscpConfig{'LOCK_DIR'}/imscp-rqst-mngr.lock" )->acquire();

iMSCP::Getopt->parse( sprintf( 'Usage: perl %s [OPTIONS]...', basename( $0 )) . qq{

Process backend requests.

OPTIONS:
 -d,   --debug   Enable debug mode.
 -h,-? --help    Show this help.
 -v,   --verbose Enable verbose mode.
},
    'debug|d'   => \&iMSCP::Getopt::debug,
    'help|?|h'  => \&iMSCP::Getopt::showUsage,
    'verbose|v' => \&iMSCP::Getopt::verbose
);

newDebug( 'imscp-rqst-mngr.log' );

iMSCP::Bootstrapper->getInstance()->boot( { config_readonly => TRUE } );
iMSCP::DbTasksProcessor->getInstance()->processDbTasks();

=head1 AUTHOR

 Laurent Declercq <l.declercq@nuxwin.com>

=cut

1;
__END__
