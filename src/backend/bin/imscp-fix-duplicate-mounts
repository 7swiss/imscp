use strict;
use warnings;
use iMSCP::Boolean;
use iMSCP::Bootstrapper;
use iMSCP::Debug 'newDebug';
use iMSCP::LockFile;
use iMSCP::Mount 'umount';
use POSIX 'locale_h';

setlocale( LC_MESSAGES, 'C.UTF-8' );

$ENV{'LANG'} = 'C.UTF-8';

$> == 0 or die( "You do not have permission to call this script.\n" );

exit unless iMSCP::LockFile->new( path => "$::imscpConfig{'LOCK_DIR'}/imscp-fix-duplicate-mounts.lock", non_blocking => TRUE )->acquire();

iMSCP::Getopt->parse( sprintf( 'Usage: perl %s [OPTION]...', basename( $0 )) . qq{

Fix duplicate mounts.

OPTIONS:
 -d,   --debug   Enable debug mode.
 -h,-? --help    Show this help.
 -v,   --verbose Enable verbose mode.
},
    'debug|d'   => \&iMSCP::Getopt::debug,
    'help|?|h'  => \&iMSCP::Getopt::showUsage,
    'verbose|v' => \&iMSCP::Getopt::verbose
);

newDebug( 'imscp-fix-duplicate-mounts.log' );

iMSCP::Bootstrapper->getInstance()->boot( {
    config_readonly => TRUE,
    nodatabase      => TRUE
} );

umount( $::imscpConfig{'SRV_DIR'} );

1;
__END__
