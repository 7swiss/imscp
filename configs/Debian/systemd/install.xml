<?xml version="1.0" encoding="UTF-8"?>
<install umask="0022">
    <folder>${ROOT_CONF}/systemd</folder>
    <folder>${ROOT_CONF}/systemd/system</folder>
    <folder>${ROOT_CONF}/tmpfiles.d</folder>
    <copy_config comment="only for cleanup purpose (obsolete files)" copy_if="0">${ROOT_CONF}/systemd/system/bind9.service</copy_config>
    <copy_config comment="only for cleanup purpose (obsolete files)" copy_if="0">${ROOT_CONF}/systemd/system/bind9-resolvconf.service</copy_config>
    <copy_config copy_if="index('${iMSCP::Servers::Named}', '::Bind9::') != -1">${ROOT_CONF}/systemd/system/bind9.service.d</copy_config>
    <copy_config copy_if="index('${iMSCP::Servers::Named}', '::Bind9::') != -1">${ROOT_CONF}/systemd/system/bind9-resolvconf.service.d</copy_config>
    <copy_config copy_if="index('${iMSCP::Servers::Po}', '::Courier::') != -1">${ROOT_CONF}/tmpfiles.d/courier-authdaemon.conf</copy_config>
    <copy_config>${ROOT_CONF}/tmpfiles.d/imscp_panel.conf</copy_config>
    <copy_config>${ROOT_CONF}/systemd/system/imscp_daemon.service</copy_config>
    <copy_config>${ROOT_CONF}/systemd/system/imscp_mountall.service</copy_config>
    <copy_config>${ROOT_CONF}/systemd/system/imscp_panel.service</copy_config>
    <copy_config>${ROOT_CONF}/systemd/system/imscp_traffic.service</copy_config>
</install>
