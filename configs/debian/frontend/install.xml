    <folders>${SYSTEM_CONF}/nginx</folders>
    <copy_config>${SYSTEM_CONF}/nginx/00_master.conf</copy_config>
    <copy_config>${SYSTEM_CONF}/nginx/00_master_ssl.conf</copy_config>
    <copy_config>${SYSTEM_CONF}/nginx/frontend.data</copy_config>
    <copy_config>${SYSTEM_CONF}/nginx/imscp_fastcgi.conf</copy_config>
    <copy_config>${SYSTEM_CONF}/nginx/imscp_php.conf</copy_config>
    <copy_config>${SYSTEM_CONF}/nginx/nginx.conf</copy_config>
    <copy_config>${SYSTEM_CONF}/nginx/php.ini</copy_config>
    <copy_config>${SYSTEM_CONF}/nginx/php-fcgi-starter.tpl</copy_config>
</install>
