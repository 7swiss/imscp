#!/bin/sh

umask 027
export PHPRC={PHP_FCGI_STARTER_DIR}/master/php{PHP_VERSION}
export PHP_FCGI_MAX_REQUESTS={FRONTEND_FCGI_MAX_REQUEST}
export TMPDIR={WEB_DIR}/data/tmp

SOCKET=/var/run/imscp_panel.sock
PIDFILE=/var/run/imscp_panel.pid
CHILDREN={FRONTEND_FCGI_CHILDREN}
USER={FRONTEND_USER}
GROUP={FRONTEND_GROUP}

exec {SPAWN_FCGI_BIN} -s $SOCKET -M 0660 -P $PIDFILE -C $CHILDREN -u $USER -g $GROUP -- {PHP_FCGI_BIN_PATH} "$@"
