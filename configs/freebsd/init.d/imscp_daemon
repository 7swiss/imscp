# PROVIDE: imscp_daemon
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable imscp_daemon:
#
#imscp_daemon_enable="YES"
#

. /etc/rc.subr

name=imscp_daemon
rcvar=`set_rcvar`

command=/usr/local/www/imscp/daemon/imscp_daemon
pidfile=/var/run/imscp-daemon.pid

stop_postcmd=stop_postcmd

stop_postcmd() {
  rm -f $pidfile
}

# set defaults

imscp_daemon_enable=${imscp_daemon_enable:-"NO"}
imscp_daemon_flags=${imscp_daemon_flags:-""}

extra_commands="reload"

load_rc_config $name
run_rc_command "$1"
