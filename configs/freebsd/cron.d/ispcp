SHELL=/bin/sh
PATH=/etc:/bin:/sbin:/usr/bin:/usr/sbin
HOME=/var/log

# delayed tasks START.

# Quota
@daily umask 027; {QUOTA_ROOT_DIR}/i-mscp-dsk-quota >&{LOG_DIR}/i-mscp-dsk-quota.log

# Traffic
0,30	*	*	*	*  umask 027; {TRAFF_ROOT_DIR}/i-mscp-srv-traff >&{LOG_DIR}/i-mscp-srv-traff.log
0,30	*	*	*	*  umask 027; {TRAFF_ROOT_DIR}/i-mscp-vrl-traff >&{LOG_DIR}/i-mscp-vrl-traff.log

# customer logs
@daily umask 027; {TOOLS_ROOT_DIR}/i-mscp-httpd-logs-mngr >&{LOG_DIR}/i-mscp-httpd-logs-mngr.log

# Backup for all the customers' data depending of the domain properties
@daily umask 027; {BACKUP_ROOT_DIR}/i-mscp-backup-all yes >&{LOG_DIR}/i-mscp-backup-all-mngr.log

# Backup for ispCP database and all /etc/i-mscp/* configuration files
@daily umask 027; {BACKUP_ROOT_DIR}/i-mscp-backup-i-mscp noreport >&{LOG_DIR}/i-mscp-backup-i-mscp-mngr.log

# Remove config backups older than seven days
@daily find {CONF_DIR}/*/backup/* -maxdepth 0 -type f -mtime +7 -print | egrep '.*\.[0-9]+$' | xargs -r /bin/rm

# Remove Daemon Logs older than 14 days (except .gz files)
@daily find {LOG_DIR}/* -maxdepth 1 -type f -mtime +14 -print | egrep '.*\.gz$' | xargs -r /bin/rm

# AWStats
{AW-ENABLED}15	*/6	*	*	*	{AWSTATS_ROOT_DIR}/awstats_updateall.pl now -awstatsprog={AWSTATS_ENGINE_DIR}/awstats.pl 2>&1 /dev/null

# Rootkit Hunter
{RK-ENABLED}0 	*/12	*	*	*	{RKHUNTER} --cronjob --createlogfile {RKHUNTER_LOG}.root --display-logfile {RKHUNTER_LOG} >&/dev/null

# Chkrootkit
{CR-ENABLED}0 	*/12	*	*	*	{CHKROOTKIT} >& {CHKROOTKIT_LOG}

# Look for and purge old sessions every 30 minutes
0,30	*	*	*	*	/usr/local/bin/bash {TOOLS_ROOT_DIR}/i-mscp-del-phptemp.sh 2>&1 /dev/null

# Delete old apache logfiles weekly
@weekly /usr/local/bin/bash {TOOLS_ROOT_DIR}/i-mscp-del-logs.sh 2>&1 /dev/null

# [{DMN_NAME}] backup task START.
# [{DMN_NAME}] backup task END.

# [{DMN_NAME}]:{CRONJOB_ID} custom task START.
# [{DMN_NAME}]:{CRONJOB_ID} custom task END.

# [{DMN_NAME}] AWStats static tasks START.
# [{DMN_NAME}] AWStats static tasks END.

# delayed tasks END.
