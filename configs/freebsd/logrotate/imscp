# Rotation for user logs for i-MSCP traffic count
#
/usr/local/www/logs/users/*.log {
  weekly
  missingok
  rotate 52
  compress
  delaycompress
  notifempty
  create 640 root wheel
  sharedscripts
  prerotate
    /usr/local/www/imscp/engine/traffic/imscp-vrl-traff >/var/log/imscp/imscp-vrl-traff.log 2>&1
  endscript
  postrotate
    /usr/local/etc/rc.d/apache22 reload > /dev/null
  endscript
}

# Rotation for user traffic prevs
#
/usr/local/www/logs/backup/*.log.perv {
  size 5M
  missingok
  rotate 5
  compress
  delaycompress
  notifempty
  create 640 root wheel
}

# Rotation for apache2, launching general statistics if awstats is installed
#
/usr/local/www/logs/*.log {
  weekly
  rotate 52
  missingok
  compress
  delaycompress
  notifempty
  create 640 root wheel
  sharedscripts
  prerotate
    if [ `cat /usr/local/etc/imscp/imscp.conf | grep -c "AWSTATS_ACTIVE = yes"` = 1 ]; then
      perl /usr/local/www/imscp/engine/awstats/awstats_updateall.pl now -awstatsprog=/usr/local/www/awstats/cgi-bin/awstats.pl >/dev/null 2>&1
    fi
  endscript
  postrotate
    if [ -f "`. /usr/local/sbin/envvars ; echo ${APACHE_PID_FILE:-/var/run/httpd.pid}`" ]; then
      /usr/local/etc/rc.d/apache22 reload > /dev/null
    fi
  endscript
}

# Rotation for imscp-apache-logger logfiles
#
"/var/log/imscp/imscp-apache-logger.stderr" /var/log/imscp/imscp-apache-logger.stdout {
  weekly
  rotate 2
  size 10M
  missingok
  compress
  delaycompress
  notifempty
  create 640 root wheel
}

# Transfer rotation for ProFTPd
#
/var/log/proftpd/xferlog {
  daily
  rotate 7
  missingok
  compress
  delaycompress
  postrotate
    if [ -e /var/run/syslog.pid ]; then
      /usr/bin/killall -HUP syslogd
    elif [ -e /var/run/rsyslogd.pid ]; then
      /usr/bin/killall -HUP rsyslogd
    fi
  endscript
}

# ProFTPd traffic rotation for i-MSCP traffic count
#
/var/log/proftpd/ftp_traff.log {
  daily
  rotate 7
  missingok
  compress
  delaycompress
  prerotate
    /usr/local/www/imscp/engine/traffic/imscp-vrl-traff >/var/log/imscp/imscp-vrl-traff.log 2>&1
  endscript
  postrotate
    if [ -e /var/run/syslog.pid ]; then
      /usr/bin/killall -HUP syslogd
    elif [ -e /var/run/rsyslogd.pid ]; then
      /usr/bin/killall -HUP rsyslogd
    fi
  endscript
}
