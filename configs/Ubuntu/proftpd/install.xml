<?xml version="1.0" encoding="UTF-8"?>
<install umask="0022">
    <!--
        The proftpd init script is copied only when the copy_if expression evaluate
        to TRUE. Otherwise, it is removed if it exists, unless the keep_if_exist
        expression evaluate to TRUE.
    -->
    <folder create_if="index('${iMSCP::Servers::Ftpd}', '::Proftpd::') != -1 &amp;&amp; '${DISTRO_CODENAME}' eq 'trusty'">
        ${SYSTEM_CONF_DIR}/init.d
    </folder>
    <copy_config copy_if="index('${iMSCP::Servers::Ftpd}', '::Proftpd::') != -1 &amp;&amp; '${DISTRO_CODENAME}' eq 'trusty'" subdir="sysvinit"
                 keep_if_exist="index('${iMSCP::Servers::Ftpd}', '::Proftpd::') != -1" mode="0755"
    >
        ${SYSTEM_CONF_DIR}/init.d/proftpd
    </copy_config>

    <!--
        The proftpd LOGROTATE(8) configuration file is copied only when the
        copy_if expression evaluate to TRUE. Otherwise, it is removed.
    -->
    <folder create_if="index('${iMSCP::Servers::Ftpd}', '::Proftpd::') != -1">${SYSTEM_CONF_DIR}/logrotate.d/</folder>
    <copy_config copy_if="index('${iMSCP::Servers::Ftpd}', '::Proftpd::') != -1" subdir="logrotate.d">
        ${SYSTEM_CONF_DIR}/logrotate.d/proftpd-basic
    </copy_config>

    <copy_config umask="0027">${IMSCP_CONF_DIR}/proftpd</copy_config>
</install>
