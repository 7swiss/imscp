<config>
		<frontend>
		<app>
			<name>i-MSCP</name>
			<codename>phoenix</codename>
			<version>1.0.0</version>
			<build>20101215</build>
		</app>
		<phpSettings>
			<display_startup_errors>1</display_startup_errors>
			<display_errors>1</display_errors>
			<date>
				<timezone>UTC</timezone>
			</date>
		</phpSettings>
		<resources>
			<frontController>
				<params>
					<displayExceptions>1</displayExceptions>
				</params>
			</frontController>
			<view>
				<encoding>UTF-8</encoding>
			</view>
			<db>
				<params>
					<charset>utf8</charset>
					<type>mysql</type>
					<host>localhost</host>
					<username>root</username>
					<password>{DB_PASSWORD}</password>
					<dbname>imscp</dbname>
				</params>
			</db>
		</resources>
		</frontend>
		<backend>
			<debug>1</debug>
		</backend>
		<paths>
			<config_dir>/etc/imscp</config_dir>
			<log_dir>/var/log/imscp</log_dir>
			<main_lock_file>/tmp/imscp.lock</main_lock_file>
		</paths>
</config>
