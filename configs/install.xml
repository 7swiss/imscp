<?xml version="1.0" encoding="UTF-8"?>
<install umask="0022">
    <!-- Make sure that the /tmp directory exists -->
    <folder mode="1777">/tmp</folder>
    <!--
        Same purpose as https://www.gnu.org/prep/standards/html_node/DESTDIR.html

        If you change the default value, pay attention to the pre_remove
        attribute. With it, the directory is first removed.
        
        TODO: Make it possible to override default value through environment variable.
    -->
    <folder export="DESTDIR" pre_remove="1" umask="0027">/tmp/imscp</folder>
    <!-- This is where the system configuration files are installed -->
    <folder export="SYSTEM_CONF_DIR">${DESTDIR}/etc</folder>
    <!-- This is where the local configuration files are installed -->
    <folder export="SYSTEM_LOCAL_CONF_DIR">${DESTDIR}/usr/local/etc</folder>
    <!-- This is where the local libraries are installed -->
    <folder export="SYSTEM_LOCAL_LIB_DIR">${DESTDIR}/usr/local/lib</folder>
    <!-- This is where the local administrator binaries are installed -->
    <folder export="SYSTEM_LOCAL_SBIN_DIR">${DESTDIR}/usr/local/sbin</folder>
    <!-- This is where the i-MSCP configuratin files are installed -->
    <folder export="IMSCP_CONF_DIR" umask="0027">${SYSTEM_CONF_DIR}/imscp</folder>
    <!-- This is where the i-MSCP log files are stored -->
    <folder export="IMSCP_LOG_DIR" umask="0027">${DESTDIR}/var/log/imscp</folder>
    <!-- This is where the i-MSCP core files are installed, excluding configuration files -->
    <folder export="IMSCP_ROOT_DIR" umask="0027">${DESTDIR}/var/www/imscp</folder>
    <!-- This is where the i-MSCP Web data are stored -->
    <folder export="IMSCP_WWW_DIR">${DESTDIR}/var/www/virtual</folder>
    <!-- This is where the i-MSCP mail data are stored -->
    <folder export="IMSCP_MAIL_DIR" umask="0027">${DESTDIR}/var/mail/virtual</folder>
    <!-- Install the i-MSCP master configuration file -->
    <copy_config umask="0027">${IMSCP_CONF_DIR}/imscp.conf</copy_config>
    <!-- Install the i-MSCP database schema file -->
    <copy_config umask="0027" filemode="0600" recursive="1">${IMSCP_CONF_DIR}/database</copy_config>
</install>
