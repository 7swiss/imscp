# description:
#
# creates the main imscp.pot file out of any found strings in the php files
#
# Warning: This script will remove any strings which aren't present in the GUI
# php files, this means dynamic strings or strings out of the database will
# ignored.
#

set -e

if [ $1 ] && [ -d $1 ]; then
	GUI=${1}/
else
	GUI=../../gui/
fi

if [ ! -f ${GUI}/index.php ]; then
	if [ -f ${GUI}/gui/index.php ]; then
		GUI=${GUI}/gui/
	fi
fi

if [ ! -f ${GUI}/index.php ]; then
	echo "${GUI} isn't a valid gui/ location!"
	exit 1
fi

/usr/bin/xgettext --language=PHP \
-d "i-MSCP" \
--keyword="tr" \
--no-location \
--copyright-holder="iMSCP Team" \
${GUI}include/i18n.php \
${GUI}include/iMSCP/*.php \
${GUI}include/iMSCP/*/*.php \
${GUI}include/iMSCP/View/Helpers/*.php \
${GUI}*.php \
${GUI}*/*.php \
--from-code=utf-8 \
-p ${GUI}../language-files/po \
-o "iMSCP.pot"

sed --in-place '/#. Please ignore this entry/d' ${GUI}../language-files/po/iMSCP.pot
sed --in-place 's/msgid "encoding"/#. Please ignore this entry\nmsgid "encoding"/' ${GUI}../language-files/po/iMSCP.pot

exit 0
