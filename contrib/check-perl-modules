my @needed = (strict, warnings, IO::Socket, DBI, DBD::mysql, Mail::Address, MIME::Entity,
MIME::Parser, Crypt::CBC, Crypt::Blowfish, MIME::Base64,
Term::ReadPassword, Net::LibIDN);

my ($mod, $mod_err, $mod_missing) = ('', '_off_', '');

for $mod (@needed) {
    print STDERR "Checking for '$mod'...\t";

    if (eval "require $mod") {
        $mod -> import();
        printf " Ok.\n";
    } else {
        print STDERR "CRITICAL ERROR: Module '$mod' WAS NOT FOUND !\n" ;

        $mod_err = '_on_';

        if ($mod_missing eq '') {
            $mod_missing .= $mod;
        } else {
            $mod_missing .= ", $mod";
        }
    }
}

if ($mod_err eq '_on_') {
    print STDERR "\nModules [$mod_missing] WERE NOT FOUND in your system...\n";
    print STDERR "\nPlease INSTALL them before using i-MSCP !\n";
    exit 1;
} else {
    $| = 1;
}

return 0;

# hack for dh_perl

require IO::Socket;
require DBI;
require DBD::mysql;
require Mail::Address;
require MIME::Entity;
require MIME::Parser;
require Crypt::CBC;
require Crypt::Blowfish;
require MIME::Base64;
require Term::ReadPassword;
require Net::LibIDN;
