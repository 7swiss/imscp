# Wrap real i-MSCP installer for satisfying pre-requisites

print "Satisfying pre-requisites for the i-MSCP installer\n";

print "  - Updating package index files...\n";
system( 'apt-get', '--quiet=2', 'update' ) == 0 or "[ERROR] Couldn't update APT index";

print "  - Upgrading distribution...\n";
system( 'apt-get', '--assume-yes', '--no-install-recommends', '--quiet=2', 'dist-upgrade' ) == 0 or die(
    "[ERROR] Couldn't upgrade distribution"
);
print "  - Installing pre-required distribution packages...\n";
system(
    'apt-get', '--assume-yes', '--no-install-recommends', '--quiet=2', 'install', 'libclone-perl', 'lsb-release',
    'perl', 'whiptail'
) == 0 or die(
    "[ERROR] Couldn't install pre-required distribution packages."
);
system( 'clear 2>/dev/null' );

# Execute the real installer
require File::Basename;
chdir( File::Basename::dirname( __FILE__ )) or die( "Couldn't chdir" );
exec( '/usr/bin/perl', 'imscp-autoinstall.real', @ARGV );
